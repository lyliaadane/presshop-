{% extends 'base.html.twig' %}

{% block title %}Promos{% endblock %}

{% block body %}
    <h1>Promos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promo.id }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ promo.qte }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promo.description }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ promo.montant }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ promo.dateDebut ? promo.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ promo.dateFin ? promo.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_promos_index') }}">back to list</a>

    <a href="{{ path('app_promos_edit', {'id': promo.id}) }}">edit</a>

    {{ include('promos/_delete_form.html.twig') }}
{% endblock %}
