{% extends 'base.html.twig' %}

{% block title %}Nouvelle Promotion{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Créer une promotion</h1>

        <!-- Bouton pour ouvrir la modale -->
        <button type="button" class="btn btn-success btn-sm mb-4" data-bs-toggle="modal" data-bs-target="#modalAddPromo">
            <i class="fas fa-plus"></i> Ajouter une promotion
        </button>

        <a href="{{ path('app_promos_index') }}" class="btn btn-secondary btn-sm mb-4">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        <!-- Modal Ajout Promotion -->
    <div class="modal fade" id="modalAddPromo" tabindex="-1" aria-labelledby="modalAddPromoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                {{ form_start(form) }}
                    <div class="modal-header">
                        <h5 class="modal-title">Ajouter une promotion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        {{ form_row(form.qte) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.montant) }}
                        {{ form_row(form.date_debut) }}
                        {{ form_row(form.date_fin) }}
                        {{ form_row(form.id_produit) }}
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary">Enregistrer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


    </div>
</div>
{% endblock %}
